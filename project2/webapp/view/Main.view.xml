<mvc:View controllerName="project2.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns="sap.m">
    <Page title="반품 / 교환 신청" >
        <content>
			<l:Grid containerQuery="true" class="sapUiSmallMarginTop sapUiSmallMarginBottom">
				<VBox>
                    <layoutData>
                        <l:GridData span="XL2 L2 M12 S12" />
                    </layoutData>
                    <f:SimpleForm id="SimpleFormDisplay354"
                        editable="false"
                        layout="ColumnLayout">
                        <f:toolbar>
                            <Toolbar>
                                <ToolbarSpacer />
                                <Button text="Search" icon="sap-icon://search" press="onSearch" type="Emphasized"/>
                            </Toolbar>
                        </f:toolbar>
                        <f:content>
                            <Label text="전화번호" />
                            <Input value="{main>Conditions/Telno} "/>
                        </f:content>
                    </f:SimpleForm>
                </VBox>
                <VBox>
                    <layoutData>
                        <l:GridData span="XL10 L10 M12 S12" />
                    </layoutData>
                    <Panel 
                        class="sapUiSmallMarginBottom"
                        expandable="true"
                        expanded="true"
                        headerText="상품 조회" 
                        width="auto">
                        <content>
                            <Table 
                                id="CategoryTable"
                                inset="false"
                                selectionChange="onCategorySelect"
                                items="{/ZBAT_SD110Set}"
                                mode="SingleSelectMaster"
                                >
                                <columns>
                                    <Column>
                                        <Text text="상품코드" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem 
                                        type="Active"
                                        vAlign="Middle" 
                                        press="onTableItemPress">
                                        <cells>
                                            <Text text="{Matcode}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </content>
                    </Panel>
                    <HBox>
                        <t:Table
                            id="ProductTable"
                            width="500px"
                            rows="{main>/LocalProducts}"
                            visibleRowCount="12"
                            selectionMode="None"
                            rowSelectionChange="onProductSelect"
                            paste="onPaste"
                            ariaLabelledBy="title">
                            <t:extension>
                                <OverflowToolbar style="Clear">
                                    <Title id="title" text="상품 조회"/>
                                </OverflowToolbar>
                            </t:extension>
                            <t:columns>
                                <t:Column width="10%">
                                    <Label text="ID" />
                                    <t:template>
                                        <Text text="{main>Matcode}" wrapping="false" />
                                    </t:template>
                                </t:Column>
                                <t:Column>
                                    <Label text="상품명" />
                                    <t:template>
                                        <Text text="{main>Matname}" wrapping="false" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="End" width="10%" >
                                    <Label text="재고" />
                                    <t:template>
                                        <Text text="{main>Quant}" wrapping="false" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="End">
                                    <Label text="단위 주문 수량" />
                                    <t:template>
                                        <Text text="{main>UnitsOnOrder}" wrapping="false" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center">
                                    <Label text="주문 가능여부" />
                                    <t:template>
                                        <core:Icon src="{= ${main>UnitsInStock} > ${main>UnitsOnOrder} ? 'sap-icon://circle-task' : 'sap-icon://decline'}"
                                                   color="{= ${main>UnitsInStock} > ${main>UnitsOnOrder} ? '#1DDB16' : '#FF0000'}" />
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:Table>
                    </HBox>
                </VBox>
			</l:Grid>
		</content>
	</Page>
</mvc:View>